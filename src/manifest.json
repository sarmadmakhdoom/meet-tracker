{
  "manifest_version": 3,
  "name": "Google Meet Tracker - Redesigned",
  "version": "2.0.0",
  "description": "Clean, modular meeting tracker with proper Meeting-Session relationship",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "*://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background-entry.js"
  },
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*"],
      "js": ["content-entry.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Meet Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
